<header class="container d-flex flex-column justify-content-between">
  <div class="d-flex flex-row justify-content-between">
    <div>fantempo</div>

    <% unless controller.class.name == 'SessionsController' %>
      <div class="user-menu-header">
        <% unless current_user %>
          <%= link_to "Ingresar", login_path %>
        <% else %>
          <%= current_user.name %> |
          <%= link_to "Salir", destroy_user_session_path, method: :delete %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= render 'shared/notifications' %>
</header>